{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "allowJs": true,          // ✅ allow importing .js/.jsx files
    "checkJs": false,         // ✅ skip type-checking JS/JSX
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true            // ✅ don't output .js files from .ts
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}